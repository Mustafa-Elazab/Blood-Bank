<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.HomeActivity">


    <RelativeLayout
        android:id="@+id/Activity_home_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_tool_bar"
        android:background="@color/white">

        <ImageView
            android:id="@+id/Activity_home_img_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dim_s"
            android:src="@drawable/ic_menu_black_24dp" />

        <ImageView
            android:id="@+id/Activity_home_img_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dim_m"
            android:src="@drawable/ic_notifications_none_black_24dp"

            />

        <TextView
            android:id="@+id/Tool_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/txt_size_ll"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/Activity_home_img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dim_m"
            android:src="@drawable/ic_black"
            android:visibility="gone" />

        <TextView

            android:id="@+id/notificationCount"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dim_m"
            android:layout_marginEnd="@dimen/dim_s"
            android:background="@drawable/ic_fiber_manual_record_black_24dp"
            android:gravity="center"
            android:padding="@dimen/dim_s"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_sss" />
    </RelativeLayout>


    <include layout="@layout/content_blood_bank" />

</LinearLayout>