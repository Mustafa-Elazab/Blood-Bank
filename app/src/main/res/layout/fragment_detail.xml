<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/Fragment_detail_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_tool_bar"
        android:background="@color/white">

        <ImageView
            android:id="@+id/Fragment_detail_img_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dim_s"
            android:src="@drawable/ic_menu_black_24dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/Fragment_detail_img_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dim_m"
            android:src="@drawable/ic_notifications_none_black_24dp"

            />

        <TextView
            android:id="@+id/Fragment_detail_Tool_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/txt_size_ll"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/Fragment_detail_img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dim_m"
            android:src="@drawable/ic_black" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:id="@+id/Fragment_detail_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_xl"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_xl"
                android:text="الاسم"
                android:textAllCaps="false"
                android:textSize="@dimen/txt_size_l"
                android:textStyle="bold"

                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_sss"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_m"
                android:background="@color/gray_dark" />

            <TextView
                android:id="@+id/Fragment_detail_tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_xl"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_xl"
                android:text="الاسم"
                android:textAllCaps="false"
                android:textSize="@dimen/txt_size_l"
                android:textStyle="bold"

                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_sss"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_m"
                android:background="@color/gray_dark"

                />


            <TextView
                android:id="@+id/Fragment_detail_tv_bloodtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_xl"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_xl"
                android:text="الاسم"
                android:textAllCaps="false"
                android:textSize="@dimen/txt_size_l"
                android:textStyle="bold"

                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_sss"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_m"
                android:background="@color/gray_dark" />

            <TextView
                android:id="@+id/Fragment_detail_tv_bagsnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_xl"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_xl"
                android:text="الاسم"
                android:textAllCaps="false"
                android:textSize="@dimen/txt_size_l"
                android:textStyle="bold"

                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_sss"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_m"
                android:background="@color/gray_dark"

                />

            <TextView
                android:id="@+id/Fragment_detail_tv_hospital_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_xl"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_xl"
                android:text="الاسم"
                android:textAllCaps="false"
                android:textSize="@dimen/txt_size_l"
                android:textStyle="bold"

                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_sss"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_m"
                android:background="@color/gray_dark"

                />

            <TextView
                android:id="@+id/Fragment_detail_tv_hospital_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_xl"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_xl"
                android:text="الاسم"
                android:textAllCaps="false"
                android:textSize="@dimen/txt_size_l"
                android:textStyle="bold"

                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_sss"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_m"
                android:background="@color/gray_dark"

                />

            <TextView
                android:id="@+id/Fragment_detail_tv_phone_numer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_xl"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_xl"
                android:text="الاسم"
                android:textAllCaps="false"
                android:textSize="@dimen/txt_size_l"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/Fragment_detail_tv_notes"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_7xl"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginTop="@dimen/dim_l"
                android:layout_marginEnd="@dimen/dim_m"
                android:background="@drawable/shape_notes_border"
                android:padding="@dimen/dim_m"
                android:text="الاسم"
                android:textSize="@dimen/txt_size_l"
                android:textStyle="bold"
                />



            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_20xl"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginEnd="@dimen/dim_m"
                android:layout_marginTop="@dimen/dim_xl"/>

            <Button
                android:id="@+id/Fragment_detail_btn_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_m"
                android:layout_marginTop="@dimen/dim_xl"
                android:layout_marginEnd="@dimen/dim_m"
                android:layout_marginBottom="@dimen/dim_xl"
                android:background="@color/green"
                android:drawableStart="@drawable/phone"
                android:drawableTint="@color/white"
                android:text="اتصال"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>