<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/Fragmet_Display_Artical_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_tool_bar"
        android:background="@color/white">

        <ImageView
            android:id="@+id/Fragmet_Display_Artical_img_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dim_s"
            android:src="@drawable/ic_menu_black_24dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/Fragmet_Display_Artical_img_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dim_m"
            android:src="@drawable/ic_notifications_none_black_24dp"

            />

        <TextView
            android:id="@+id/Fragmet_Display_Artical_Tool_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/txt_size_ll"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/Fragmet_Display_Artical_img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dim_m"
            android:src="@drawable/ic_black" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Fragmet_Display_Artical_relative"
        android:layout_marginStart="@dimen/dim_l"
        android:layout_marginTop="@dimen/dim_m"
        android:layout_marginEnd="@dimen/dim_l">


        <ImageView
            android:id="@+id/Fragment_Display_Artical_image_post"
            android:layout_width="match_parent"
            android:layout_height="@dimen/logo"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dim_l"
            android:src="@drawable/img1" />

        <TextView
            android:id="@+id/Fragment_Display_Artical_tv_post_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Fragment_Display_Artical_rlt"
            android:text="vjbvkbvidbsdvivsdbuvdsidvusgudsvgduygdvulidsguvdgvdligdsisdgidvggvdsigdsvidvggidsv
"
            android:textSize="@dimen/txt_size_l" />

        <RelativeLayout
            android:id="@+id/Fragment_Display_Artical_rlt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_4xl"
            android:layout_below="@id/Fragment_Display_Artical_image_post">

            <TextView
                android:id="@+id/Fragment_Display_Artical_tv_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"

                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dim_l"
                android:layout_marginTop="@dimen/dim_m"
                android:text="@string/thewaytopeotect"
                android:textSize="@dimen/txt_size_m" />

            <ImageView
                android:id="@+id/Fragment_Display_Artical_image_like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:src="@drawable/likes" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>