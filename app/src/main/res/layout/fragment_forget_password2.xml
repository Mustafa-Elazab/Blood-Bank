<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splash"
    tools:context=".ui.fragment.usercycle.ForgetPassword2Fragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relative_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/Login_image"
        android:layout_width="@dimen/logo"
        android:layout_height="@dimen/logo"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo256"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dim_10xl"
        android:layout_marginBottom="@dimen/dim_xl"
        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/Fragment_forget1_ed_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_4xl"
        android:layout_below="@id/Login_image"
        android:background="@drawable/edit_text_register"
        android:layout_marginStart="@dimen/dim_l"
        android:layout_marginEnd="@dimen/dim_l"
        android:layout_marginTop="@dimen/dim_m"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Phone"
            android:inputType="phone"
            android:background="@null"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/Fragment_forget1_ed_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_4xl"
        android:layout_below="@id/Fragment_forget1_ed_phone"
        app:passwordToggleEnabled="true"
        android:background="@drawable/edit_text_register"
        android:layout_marginStart="@dimen/dim_l"
        android:layout_marginEnd="@dimen/dim_l"
        android:layout_marginTop="@dimen/dim_m"
        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Password"
            android:inputType="textWebPassword"
            android:background="@null"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/Fragment_forget1_ed_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_4xl"
        android:layout_below="@id/Fragment_forget1_ed_password"
        app:passwordToggleEnabled="true"
        android:background="@drawable/edit_text_register"
        android:layout_marginStart="@dimen/dim_l"
        android:layout_marginEnd="@dimen/dim_l"
        android:layout_marginTop="@dimen/dim_m"
        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Confirm Password"
            android:inputType="textWebPassword"
            android:background="@null"
            />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/Fragment_forget1_btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Fragment_forget1_ed_confirm_password"
        android:layout_marginStart="@dimen/dim_l"
        android:layout_marginTop="@dimen/dim_xl"
        android:layout_marginEnd="@dimen/dim_l"
        android:textAllCaps="false"
        android:text="Done"
        android:background="@color/blue_black"
        android:textSize="@dimen/txt_size_l"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    </RelativeLayout>

</ScrollView>
</RelativeLayout>