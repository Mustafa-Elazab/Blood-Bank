<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">




        <RelativeLayout
            android:id="@+id/Fragment_orders_rlt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/Fragment_orders_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dim_4xl"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dim_s"
                    android:layout_marginEnd="@dimen/dim_s"
                    android:layout_weight="1"
                    android:background="@drawable/test_orders">

                    <Spinner
                        android:id="@+id/Fragment_orders_sp_bloodtype"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dim_4xl"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dim_s"
                    android:layout_marginEnd="@dimen/dim_s"
                    android:layout_weight="1"
                    android:background="@drawable/test_orders">

                    <Spinner
                        android:id="@+id/Fragment_orders_sp_city"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/Fragment_orders_img_search"
                    android:layout_width="@dimen/dim_3xl"
                    android:layout_height="@dimen/dim_4xl"
                    android:src="@drawable/ic_search_black_24dp"
                    android:paddingStart="@dimen/dim_m"
                    android:paddingEnd="@dimen/dim_m"
                    android:layout_marginEnd="@dimen/dim_s"
                    />


            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/Fragment_orders_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/Fragment_orders_relative"
                android:layout_marginTop="@dimen/dim_m">


            </android.support.v7.widget.RecyclerView>


        </RelativeLayout>


</RelativeLayout>