<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/shape_post_left"
    android:layoutDirection="rtl"
    app:cardCornerRadius="@dimen/dim_xl"
    android:layout_marginTop="@dimen/dim_m"
    android:layout_marginBottom="@dimen/dim_m">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

         >

        <TextView
            android:id="@+id/Fragment_orders_tv_bloodtype"
            android:layout_width="@dimen/dim_10xl"
            android:layout_height="@dimen/dim_10xl"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dim_l"
            android:layout_marginEnd="@dimen/dim_m"
            android:background="@drawable/shape_blood_type"
            android:gravity="center"
            android:text="B+"
            android:textAlignment="center"
            android:textSize="@dimen/txt_size_5xl"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/Fragment_orders_rlt_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/Fragment_orders_tv_bloodtype"
            android:layout_toEndOf="@id/Lin_Buttons"
            android:orientation="vertical"
            android:paddingStart="@dimen/dim_s">

            <TextView
                android:id="@+id/Fragment_orders_tv_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="@dimen/txt_size_s" />

            <TextView
                android:id="@+id/Fragment_orders_tv_hospital"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="@dimen/txt_size_s" />

            <TextView
                android:id="@+id/Fragment_orders_tv_city"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="@dimen/txt_size_s" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Lin_Buttons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dim_s"
            android:layout_marginTop="@dimen/dim_m"
            android:layout_marginBottom="@dimen/dim_m"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/Fragment_orders_btn_detail"
                android:layout_width="@dimen/dim_11xl"
                android:layout_height="@dimen/dim_5xl"
                android:layout_marginTop="@dimen/dim_m"
                android:layout_marginBottom="@dimen/dim_s"
                android:background="@color/gray"
                android:gravity="center"
                android:text="@string/detail"
                android:textAllCaps="false"
                android:textColor="@color/blue" />

            <Button

                android:id="@+id/Fragment_orders_btn_call"
                android:layout_width="@dimen/dim_11xl"
                android:layout_height="@dimen/dim_5xl"
                android:layout_marginTop="@dimen/dim_s"
                android:layout_marginBottom="@dimen/dim_m"
                android:background="@color/green"
                android:text="@string/call"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>